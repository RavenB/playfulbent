<% remote_form_for :location, @location, :url => formatted_profile_user_location_path(@profile, :js), :method => :put, :loading => show_spinner(:edit_location), :html => {:class => 'inline'} do |f| %>
	<p>This information is optional, it's used to help people find other kinky people in their home town.</p>
	<table>
		<tr>
			<td class="label"><label>Country</label></td>
			<td>
				<%= f.country_select :country, [], :include_blank => true %>
			</td>
		</tr>
		<tr>
			<td class="label" valign="top"><label>City</label></td>
			<td>
				<%= f.text_field :city %>
			</td>
		</tr>	
	</table>
		
	<%= inline_form_footer @profile, :edit_location %>
<% end %>