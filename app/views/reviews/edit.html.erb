<div class="review_form">
	<h1>Edit Your Review</h1>
	
	<%= render :partial => 'product_preview', :object => @product %>
	
	<div id="new_form_container">
		<% form_for :review, @review, :url => review_path(@review), :builder => LabelledBuilder, :loading => trigger_footer(:new_review), :html => {:method => :put, :class => 'single_column two_thirds', :id => 'new_review_form'} do |f| %>

			<%= render :partial => 'form', :locals => {:f => f} %>
			
			<%= form_footer(:new_review, :submit_name => 'Update', :cancel_link => review_path(@review)) %>
		<% end %>
	</div>
</div>